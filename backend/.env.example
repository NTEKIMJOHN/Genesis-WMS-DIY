# Server Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database
DATABASE_URL="postgresql://genesis_user:genesis_password@localhost:5432/genesis_wms?schema=public"

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# CORS
CORS_ORIGIN=http://localhost:5173

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/jpg,application/pdf

# Logging
LOG_LEVEL=info
LOG_DIR=./logs

# Rate Limiting
RATE_LIMIT_WINDOW_MS=3600000
RATE_LIMIT_MAX_REQUESTS=1000

# Email (Optional - for notifications)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=notifications@genesis-wms.com
SMTP_PASSWORD=your-smtp-password
SMTP_FROM=Genesis WMS <noreply@genesis-wms.com>

# AWS S3 (Optional - for photo storage)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
S3_BUCKET_NAME=genesis-wms-photos

# Variance Thresholds (configurable per tenant)
VARIANCE_AUTO_APPROVE_PERCENTAGE=2
VARIANCE_SUPERVISOR_REVIEW_PERCENTAGE=10
VARIANCE_AUTO_APPROVE_VALUE=100
VARIANCE_MANAGER_APPROVAL_VALUE=500

# Putaway Configuration
PUTAWAY_ENABLE_FEFO=true
PUTAWAY_ENABLE_FIFO=true
PUTAWAY_MAX_BIN_UTILIZATION=95

# Label Printing
LABEL_PRINTER_IP=192.168.1.100
LABEL_PRINTER_PORT=9100
LABEL_FORMAT=ZPL
