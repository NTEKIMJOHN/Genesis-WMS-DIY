model AuditLog {
  id            String   @id @default(uuid())
  tenantId      String
  userId        String?
  action        String   // CREATE, UPDATE, DELETE, etc.
  entityType    String   // Order, Inventory, etc.
  entityId      String
  changes       Json?
  ipAddress     String?
  userAgent     String?
