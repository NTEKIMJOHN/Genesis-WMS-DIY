  @@index([tenantId])
  @@index([barcode])
  @@map("products")
}

// ============================================================================
// INVENTORY ENTITIES
// ============================================================================

model Inventory {
  id                 String   @id @default(uuid())
  tenantId           String
  warehouseId        String
  locationId         String
  productId          String
  batchNumber        String?
  lotNumber          String?
  serialNumber       String?
