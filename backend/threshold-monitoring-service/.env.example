# Server Configuration
PORT=3003
NODE_ENV=development

# Database
DATABASE_URL=postgresql://genesis_user:genesis_password@localhost:5432/genesis_wms

# Redis Cache
REDIS_URL=redis://:genesis_redis@localhost:6379
CACHE_TTL_HOT=300
CACHE_TTL_WARM=1800
CACHE_TTL_COLD=7200

# RabbitMQ
RABBITMQ_URL=amqp://genesis_user:genesis_password@localhost:5672

# JWT Authentication
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production
JWT_EXPIRY=24h

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000

# Email Configuration (SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_FROM=Genesis WMS <noreply@genesis-wms.com>

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Webhook Configuration
WEBHOOK_TIMEOUT_MS=5000
WEBHOOK_RETRY_ATTEMPTS=3

# Threshold Monitoring
THRESHOLD_CHECK_CRON=0 */2 * * *
VELOCITY_LOOKBACK_DAYS=7
VELOCITY_MIN_SAMPLES=3
LOW_STOCK_ALERT_ENABLED=true
OVERSTOCK_ALERT_ENABLED=true

# Logging
LOG_LEVEL=info
